<h1>Edit User</h1>
<div class="row">
    <div class="col">
        <form class="form-group" action="" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <p>First Name: <input class="form-control" type="text" name="user[first_name]" placeholder="<%= @user.first_name %>"></p>
    <p>Last Name: <input class="form-control" type="text" name="user[last_name]" placeholder="<%= @user.last_name %>"></p>
    <p>Email: <input class="form-control" type="text" name="user[email_address]" placeholder="<%= @user.email_address %>"></p>
    <input class="form-control" type="submit" value="Add User!">
    </form>
    </div>
</div>