<h1>New Student</h1>

<form action="/dojos/<%=@dojo.id %>/students" method="post">
<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <p>First Name: <input type="text" name="Student[first_name]"></p>
    <p>Last Name: <input type="text" name="Student[last_name]"></p>
    <p>Email: <input type="text" name="Student[email]"></p>
    <p>Dojo: <select name="Student[Dojo_id]">
        <% @all_dojo.each do |d| %>
        <option value="<%= d.id %>"><%= d.branch %></option>
        <% end %>
    </select></p>
    <input type="submit" value="Create">
</form>
<a href="/dojos">Home</a> <a href="/dojos/<%=@dojo.id %>/"><%=@dojo.branch %></a>

<% if flash[:failure] %>
    <div id="alert">
        <p> <%= flash[:failure] %> </p>
    </div>
<% end %>
