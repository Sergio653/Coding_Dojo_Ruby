<div class="container">
    <div class="row">
        <div class="col">
        <h2>Total Gold: <%=session[:gold]  %> </h2>
        </div>
        <div class="col">
            <a href="reset"><button>Reset</button></a>
        </div>
    </div>
    <div class="row">
            <div class="farm jumbotron col">
                <h1>Farm</h1>
                <p>( earns 10-20 golds)</p>
                <form action="rpg/farm" method="post">
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                    <input type="submit" value="Find Gold!"/>
                </form> 
            </div>
            <div class="cave jumbotron col">
                <h1>Cave</h1>
                <p>( earns 5-10 golds)</p>
                <form action="rpg/cave" method="post">
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                    <input type="submit" value="Find Gold!"/>
                </form> 
            </div>
            <div class="house jumbotron col">
                <h1>House</h1>
                <p>( earns 2-5 golds)</p>
                <form action="rpg/house" method="post">
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                    <input type="submit" value="Find Gold!"/>
                </form> 
            </div>
            <div class="casino jumbotron col">
                <h1>Casino</h1>
                <p>( earns/takes 0-50 golds)</p>
                <form action="rpg/casino" method="post">
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                    <input type="submit" value="Find Gold!"/>
                </form> 
            </div>
        </div>

        <div class="row">
            <div class="col jumbotron text-center">
                <h2>Activities</h2>
                    <% session[:activities].each do |i| %>
                    <p><%= i %></p>
                    <% end %>
            </div>
        </div>
    </div>

</div>